<div class="container single_prod_container">

  <!--Section: Content-->
  <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

    <!--Grid row-->
    <div class="row">

      <!--Grid column-->
      <div class="col-md-6 mb-4 mb-md-0">

        <h1 class="font-weight-bold">{{product.title}}</h1>

        <p class="text-muted">{{product.description}}</p>
        <p class="text-muted">Price: {{product.price}}</p>
        <form id="reviewForm">
          <label>
            Enter Your Review
          </label>
          <input type="text" name="review" />
          <button
            class="add_review"
            type="submit"
            data-id="{{product._id}}"
          >Submit</button>
        </form>

        <p>
          <a
            class="product_like"
            href=""
            data-id="{{product._id}}"
            id="unliked"
          >{{product.noOfLikes}} Likes: <i class="fa fa-thumbs-up"></i></a>
        </p>

        <div>

          <div id="productPropHeading">Product Properties</div>

          {{#each product.facet}}
            <p>
              {{this.property}}
              :
              {{this.value}}
            </p>

          {{/each}}

        </div>

        <div>

          <div id="productPropHeading">User reviews on the product</div>

          {{#if hascomments}}

            {{#each comments}}
              <p>
                {{this}}
              </p>

            {{/each}}
          {{else}}
            <p>No comments</p>
          {{/if}}

        </div>

        <a
          class="btn btn-primary buy_now"
          href=""
          role="button"
          data-id="{{product._id}}"
        > Buy Now <i class=""></i></a>

      </div>
      <!--Grid column-->

      <!--Grid column-->
      <div class="col-md-6 mb-4 mb-md-0">
        <!--Image-->
        <div class="view overlay z-depth-1-half">
          <img src="{{product.productImage}}" class="" alt="" height="250px" />
          <a href="#">
            <div class="mask rgba-white-light"></div>
          </a>
        </div>
      </div>
      <!--Grid column-->

    </div>
    <!--Grid row-->

  </section>
  <!--Section: Content-->

</div>