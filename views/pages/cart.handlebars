<div class="container" id="cart_container">
  <!--Section: Content-->

  <section class="col-md-12" id="single_prod_section">

    {{#if hasProduct}}
      <div>
        <h1>Cart Page</h1>
        <p class="cart_fields">Customer Delivery Details.. </p>
        <p class="single_h3"><label class="cart_fields">Name:</label>
          {{user.firstName}}</p>
        <p><label class="cart_fields">Address:</label>
          {{user.address.Line1}},{{user.address.Line1}}</p>
        <p><label class="cart_fields">Contact :</label>{{user.mobile}}</p>
        <label class="cart_fields">City :</label>{{user.address.City}}
        <label class="cart_fields">State :</label>
        {{user.address.State}}
        <label class="cart_fields">Zipcode :</label>
        {{user.address.ZipCode}}
      </div>
      {{#each productsList}}
        <div class="row" id="cart_pg_row">
          <div class="col-md-6">
            <h2 class="single_h3">{{this.title}}</h2>

            <p><label class="cart_fields">Description</label>
              {{this.description}}</p>
            <p><label class="cart_fields">Price</label> ${{this.price}}</p>
          </div>
          <div class="col-md-6">
            <img
              src="{{this.productImage}}"
              class=""
              alt="cart img"
              height="250"
            />
          </div>
        </div>
      {{/each}}

      <p>Total Price: {{total}}</p>

      <div class="confirm_purchase">
        <button type="button" class="btn btn-primary" id="confirmation">Confirm
          Purchase</button>
      </div>

    {{else}}
      <p>Cart is empty! </p>

    {{/if}}

  </section>
  <!--Section: Content-->
</div>